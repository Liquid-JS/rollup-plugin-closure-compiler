{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": [
            "esnext",
        ],
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "target": "es2019",
        "baseUrl": ".",
        "allowJs": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "declaration": true,
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "incremental": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./test/**/*.js"
    ]
}
